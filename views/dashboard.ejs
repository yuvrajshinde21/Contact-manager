<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Smart Contact Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/dashboard.css">
</head>

<body>
    <!-- Topbar -->
    <nav class="topbar d-flex justify-content-between align-items-center px-3">
        <div class="d-flex align-items-center gap-3 col-2">
            <button class="btn btn-outline-secondary btn-sm d-md-none" onclick="toggleSidebar()">‚ò∞</button>
            <i class="bi bi-person-lines-fill fs-4"></i>
            <h5 class="mb-0 fw-semibold d-none d-md-inline">Contacts</h5>
        </div>

        <div class="d-flex align-items-center flex-grow-1 mx-2">
            <div class="position-relative w-100 me-3">
                <input type="text" class="search-input" placeholder="Search Contacts" id="searchInput" onkeyup="search(this.value)">
                <div id="suggestionBox" ></div>
            </div>
            <a href="/user/logout" class="btn btn-outline-danger btn-sm">Logout</a>
        </div>
    </nav>

    <!-- Wrapper -->
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar bg-light">
            <h6 class="mb-3">üìÅ Menu</h6>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="/contact">
                        <i class="bi bi-people-fill me-2 text-secondary"></i> All Contacts
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="/add">
                        <i class="bi bi-person-plus-fill me-2 text-secondary"></i> Create Contact
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="/bin">
                        <i class="bi bi-trash3 me-2 text-secondary"></i> Bin
                    </a>
                </li>
                <!-- <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="/labels">
                        <i class="bi bi-tag me-2 text-secondary"></i> Labels
                    </a>
                </li> -->
            </ul>
        </nav>

        <!-- Main Content -->
        <main id="mainContent" class="main-content flex-grow-1">
            <%- include(mainContent) %>
        </main>
    </div>

    <!-- Message Box -->
    <div id="msg"></div>

    <!-- Scripts -->
    <script src="/script/dashboard.js"></script>
    <script src="/script/deleteScript.js"></script>
    <script src="/script/updateScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
